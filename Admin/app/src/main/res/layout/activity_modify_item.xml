<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.activity.ModifyItemActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/notosans"
            android:text="수정"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_BackArrow_ModifyItemActivity"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView_BackArrow_ModifyItemActivity"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="4dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView_OpenGallery_ModifyItemActivity"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_edge"
        android:padding="20dp"
        android:src="@drawable/ic_add_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear" />

    <ImageView
        android:id="@+id/imageView_ItemImage_ModifyActivity"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_OpenGallery_ModifyItemActivity"
        app:layout_constraintStart_toEndOf="@+id/imageView_OpenGallery_ModifyItemActivity"
        app:layout_constraintTop_toTopOf="@+id/imageView_OpenGallery_ModifyItemActivity" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="제품명"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/imageView_OpenGallery_ModifyItemActivity"
        app:layout_constraintTop_toBottomOf="@+id/imageView_OpenGallery_ModifyItemActivity" />

    <EditText
        android:id="@+id/editText_ItemName_ModifyItemActivity"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:fontFamily="@font/notosans"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16dp"
        android:background="@drawable/edittext_customedge"
        android:layout_marginHorizontal="25dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="수량"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/editText_ItemName_ModifyItemActivity"
        app:layout_constraintTop_toBottomOf="@+id/editText_ItemName_ModifyItemActivity" />

    <EditText
        android:id="@+id/editText_ItemCount_ModifyItemActivity"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/edittext_customedge"
        android:fontFamily="@font/notosans"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/imageView_OpenGallery_ModifyItemActivity"
        app:layout_constraintTop_toBottomOf="@+id/editText_ItemCount_ModifyItemActivity" />

    <EditText
        android:id="@+id/editText_ItemCategory_ModifyItemActivity"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/edittext_customedge"
        android:fontFamily="@font/notosans"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/button_Modify_ModifyItemActivity"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="수정"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:fontFamily="@font/notosans"
        android:gravity="center"
        android:layout_margin="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"  />

</androidx.constraintlayout.widget.ConstraintLayout>