<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <variable
            name="myEquipment"
            type="com.example.jub_jub_android.entity.dataclass.MyEquipment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@drawable/bg_white_border_10dp"
        android:elevation="5dp"
        android:layout_margin="8dp"
        android:layout_height="105dp">

        <ImageView android:id="@+id/itemImage"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="19dp"
            android:src="@drawable/image"
            equipment_image="@{myEquipment.image}"
            android:elevation="1dp"
            android:background="@drawable/bg_item_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView style="@style/ItemText"
            android:id="@+id/itemName"
            android:fontFamily="@font/notosans_bold"
            android:textSize="14dp"
            android:text="@{myEquipment.name}"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toEndOf="@+id/itemImage"
            app:layout_constraintTop_toTopOf="@+id/itemImage" />

        <TextView
            android:id="@+id/item_Date"
            style="@style/ItemText"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{myEquipment.category}"
            app:layout_constraintStart_toEndOf="@+id/itemImage"
            app:layout_constraintTop_toBottomOf="@+id/itemName" />


        <TextView style="@style/ItemText"
            android:id="@+id/itemCount"
            android:text="반납일: 2021.02.06"
            app:layout_constraintBottom_toBottomOf="@+id/itemImage"
            app:layout_constraintStart_toEndOf="@+id/itemImage" />

        <TextView
            style="@style/RentStatusText"
            android:background="@drawable/bg_rent_item_waiting"
            rent_status="@{myEquipment.status}"
            android:textColor="@color/waitingPurple"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
