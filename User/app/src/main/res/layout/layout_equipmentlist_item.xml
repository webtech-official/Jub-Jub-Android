<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/black"
    android:paddingHorizontal="25dp"
    android:layout_weight="1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView_ItemImage_Item"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/imageex"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_ItemName_Item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/notosans"
        android:text="DC 모터"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@+id/textView_RentStatus_Item"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/imageView_ItemImage_Item"
        app:layout_constraintTop_toTopOf="@+id/imageView_ItemImage_Item" />

    <TextView
        android:id="@+id/textView_ItemCategory_Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모터"
        android:textSize="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/notosans"
        app:layout_constraintStart_toStartOf="@+id/textView_ItemName_Item"
        app:layout_constraintTop_toBottomOf="@+id/textView_ItemName_Item" />

    <TextView
        android:id="@+id/textView_ItemCount_Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수량 : 5개"
        android:textSize="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/notosans"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_ItemImage_Item"
        app:layout_constraintStart_toStartOf="@+id/textView_ItemName_Item" />


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView_ItemImage_Item" />

    <TextView
        android:id="@+id/textView_RentStatus_Item"
        android:layout_width="62dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_return"
        android:fontFamily="@font/notosans"
        android:gravity="center"
        android:text="반납"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>