<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LeftShortArrow" parent="BorderClickableItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_short_arrow_left</item>
        <item name="android:background">@drawable/bg_back_icon</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="MyBottomNav" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/white</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AppLogo">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">28dp</item>
    <item name="android:src">@drawable/ic_app_logo</item>
</style>

    <style name="ItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@color/mainBlue</item>
        <item name="android:fontFamily">@font/notosans_demilight</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="ItemName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/mainBlue</item>
        <item name="android:fontFamily">@font/notosans_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="PageTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black5050</item>
        <item name="android:fontFamily">@font/notosans_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BoldBlackText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/notosans_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="StepperIcon" parent="BorderClickableItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:padding">7.5dp</item>
    </style>

    <style name="NoticeDateText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/gray6B6B</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="RentStatusText">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_margin">18dp</item>
        <item name="android:textSize">9dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/notosans_demilight</item>
        <item name="android:includeFontPadding">false</item></style>

    <style name="Display_Current_Rent_Status_Text" parent="BorderClickableItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">9dp</item>
        <item name="android:textColor">@color/grayADAD</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Rent_Status_Item_Text" parent="BorderClickableItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">@color/black4848</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:includeFontPadding">false</item></style>

    <style name="SignOutCheckText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/gray8080</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/notosans_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>